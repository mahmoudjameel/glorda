# =====================================================
# Glorda - Environment Variables Configuration
# =====================================================
# Copy this file to .env and fill in the values

# =====================================================
# DATABASE CONFIGURATION (Required)
# =====================================================
# PostgreSQL connection URL
DATABASE_URL=postgresql://username:password@localhost:5432/glorda

# Individual database settings (optional if DATABASE_URL is provided)
PGHOST=localhost
PGPORT=5432
PGUSER=username
PGPASSWORD=password
PGDATABASE=glorda

# =====================================================
# SESSION CONFIGURATION (Required for Production)
# =====================================================
# Secret key for signing session cookies (use a long random string)
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# =====================================================
# SERVER CONFIGURATION
# =====================================================
# Port to run the server on (default: 5000)
PORT=5000

# Node environment: development | production
NODE_ENV=production

# =====================================================
# OPTIONAL: EMAIL SERVICE (for OTP/Password Reset)
# =====================================================
# Uncomment and configure when ready to send emails
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-email-password
# SMTP_FROM=noreply@glorda.com

# =====================================================
# OPTIONAL: FILE STORAGE (for Production)
# =====================================================
# For production, configure external storage (S3/compatible)
# STORAGE_TYPE=s3
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# S3_ENDPOINT=https://s3.amazonaws.com
